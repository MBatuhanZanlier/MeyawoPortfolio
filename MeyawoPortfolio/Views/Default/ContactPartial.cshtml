@model MeyawoPortfolio.Models.TblContact
<section class="section" id="contact">
    <div class="container text-center">
        <p class="section-subtitle">Nasıl iletişim Kurabilirsiniz?</p>
        <h6 class="section-title mb-5">Benimle iletişime Geç</h6>
        <!-- contact form -->
        @*<form action="" class="contact-form col-md-10 col-lg-8 m-auto">*@
        @using (Html.BeginForm("CreateContact", "Contact", FormMethod.Post))
        {
            <div class="form-row">
                <div class="form-group col-sm-6">
                    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", placeholder = "Adınız ve Soyadınız", size = "50", required = "required" })
                    @*<input type="text" size="50" class="form-control" placeholder="Ad Soyad" required>*@
                </div>
                <div class="form-group col-sm-6">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email Adresiniz", required = "required" })
                    @*<input type="email" class="form-control" placeholder="Email Adresiniz" requried>*@
                </div>
                <div class="form-group col-sm-12">
                    @Html.TextAreaFor(x => x.Message, 7, 3, new { @class = "form-control", placeholder = "Bana Birşeyler Yazın.", required = "required" })
                    @*<textarea name="comment" id="comment" rows="6" class="form-control"
                        p           laceholder="Metin giriniz"></textarea>*@
                </div>
                <div class="form-group col-sm-12 mt-3">
                    <button type="submit" class="btn btn-outline-primary rounded">Gönder</button>
                </div>
            </div>
        }

    </div><!-- end of container -->
</section>
