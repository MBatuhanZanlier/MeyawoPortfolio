@model List<MeyawoPortfolio.Models.TblAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layoout.cshtml";
}

<h4>Hakkımda Sayfası</h4>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th> 
        <th>Detaylar</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.Title</td>

            <td><a href="/About/DetailsAbout/@item.AboutID" class="btn btn-outline-dark">Detayları Gör</a></td>
            <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<td><a href="/About/CreateAbout/" class="btn btn-primary">Yeni Kayıt Girişi</a></td>

