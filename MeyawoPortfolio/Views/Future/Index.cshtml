@model  List<MeyawoPortfolio.Models.TblFuture>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layoout.cshtml";
}

<h2>Öne Çıkanlar Sayfasıdır</h2> 
<table class="table table-bordered">
    <tr>
        <th>Future Id</th>
        <th>Ana Başlık</th>
        <th>Ad Soyad</th>
        <th>Ünvan</th> 
        <th>Güncelle</th> 
        <th>Sil</th> 

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FutureID</td>
            <td>@item.Header</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td> <a href="/Future/UpdateFuture/@item.FutureID" class="btn btn-outline-success">Güncelle</a></td>
            <td> <a href="/Future/DeleteFuture/@item.FutureID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>
<td><a href="/Future/CreateFuture/" class="btn btn-primary">Yeni Referans Girişi</a></td>
